<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_wizard_connection_notification_form" model="ir.ui.view">
            <field name="name">wizard.connection.notification.form</field>
            <field name="model">wizard.connection.notification</field>
            <field name="arch" type="xml">
                <form>
                    <p>Connection Test Successfully.</p>
                    <footer>
                        <button string="Close" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_connection_notification_sms" model="ir.actions.act_window">
            <field name="name">Wizard SMS</field>
            <field name="res_model">wizard.connection.notification</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>